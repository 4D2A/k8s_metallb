kind: ConfigMap
apiVersion: v1
metadata:
  name: config
  namespace: "{{ k8s_metallb_namespace }}"
data:
  config: |
{% if k8s_metallb_peers is defined %}
    {{ k8s_metallb_peers }}
{% endif %}
{% for pool in k8s_metallb_pools %}
    - {{ pool | to_nice_yaml(indent=2) | indent(width=6, indentfirst=False) }}
{% endfor %}
